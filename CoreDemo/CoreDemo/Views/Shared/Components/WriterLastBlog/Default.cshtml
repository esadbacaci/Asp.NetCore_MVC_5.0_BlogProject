@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
	<h4>Diğer Bloglar</h4>

	<div class="blog-grids row mb-3">

		@foreach (var item in Model.Skip(Math.Max(0, Model.Count() - 5)))

		{
		<div class="col-md-5 blog-grid-left">
				<a href="/Blog/BlogReadAll/@item.BlogID">
					<img src="@item.BlogImage" class="img-fluid" alt="">
			</a>
		</div>
		<div class="col-md-7 blog-grid-right">

			<h5>
					<a href="/Blog/BlogReadAll/@item.BlogID" >@item.BlogTitle </a>
			</h5>
			<div class="sub-meta">
				<span>
						<i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyy"))
				</span>
			</div>
		</div>
		}
	</div>
</div>