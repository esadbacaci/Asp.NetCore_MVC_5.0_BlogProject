@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<h1>Yazarın Blogları</h1>
<br />
<a href="/Blog/BlogAdd" class="btn btn-info">Yeni Blog Oluştur</a>

<br />
<br />
<table class="table table-hover">
    <thead class="thead-dark">

    <tr>
        <th>ID</th>
        <th>Blog Başlık</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>

        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    </thead>
    @foreach (var item in Model.OrderByDescending(m => m.BlogID))
    {
        <tr >
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>

            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning"> Düzenle</a></td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger"> Sil</a></td>
        </tr>
        
    }
</table>



