@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>

<h1>Blog Düzenleme Sayfası</h1>
<br />
<br />
<small class="text-danger">Lütfen Güncelleme Yaparken Yeni Görsel Eklemeyi Unutmayınız</small>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control", @readonly = "readonly" })


    <br />

    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.BlogTitle , new {@class="form-control"})

    <br />

  @*  @Html.Label("Blog Thumbnail Url")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage , new {@class="form-control"})

    <br />
*@
     @Html.Label("Blog Görseli")
    <input type="file" name="BlogImage" class="form-control" />
    @Html.ValidationMessageFor(x => x.BlogImage)   
        
    <!--Şu anda eski görseli silmiyor fixlenebilir-->
    <br />

    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.cv,new {@class="form-control"})

    <br />

    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.BlogContent,15,3, new {@class="form-control", id = "BlogContent"})

    <br />
    <br />

    <button class="btn btn-success">Güncelle</button>
}


<script>
    CKEDITOR.replace('BlogContent');
</script>
