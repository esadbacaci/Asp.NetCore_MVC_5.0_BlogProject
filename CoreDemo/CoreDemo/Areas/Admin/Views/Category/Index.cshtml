@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<div class="table-responsive">
    <table class="table table-hover">


    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Açıklama</th>

        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryeDescription</td>
            

            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" id="DeleteBtn" onclick="return confirm('Eğer kategoriyi silerseniz bu kategoriye ait tüm bloglar silinecektir, bu işlemi onaylıyor musunuz ?');" class="btn btn-danger">Sil</a></td>
         



        </tr>
    }
</table>
</div>
<br />
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))
<a href="/Admin/Category/AddCategory" class="btn btn-info">Yeni Kategori Ekle</a>
